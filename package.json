{
    "name": "stories",
    "license": "ISC",
    "scripts": {
        "build": "parcel build assets/scripts/main.js --out-dir static --no-source-maps",
        "build:prod": "yarn build && zola build",
        "build:preview": "yarn build && zola build --base-url $DEPLOY_PRIME_URL",
        "build:pdf":"scripts/build-pdf.sh",
        "watch": "parcel watch assets/scripts/main.js --out-dir static --no-hmr --no-source-maps",
        "serve": "concurrently --kill-others \"yarn watch\" \"zola serve --drafts\"",
        "clean": "rimraf -g static/**/*.css static/**/*.js public",
        "prebuild": "yarn clean"
    },
    "dependencies": {
        "@creativebulma/bulma-tooltip": "^1.2.0",
        "@fortawesome/fontawesome-free": "^5.15.2",
        "bulma": "^0.9.1"
    },
    "devDependencies": {
        "concurrently": "^6.2.1",
        "parcel-bundler": "^1.12.4",
        "rimraf": "^3.0.2",
        "sass": "^1.32.4"
    }
}
