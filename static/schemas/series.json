{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://stories.matteojoliveau.com/schemas/series.json",
    "title": "Series",
    "description": "A collection of posts published in serialized form",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "url"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "datetime"
                },
                "draft": {
                    "type": "boolean"
                }
            },
            "required": [
                "title",
                "date"
            ]
        },
        "status": {
            "type": "string",
            "enum": [
                "completed",
                "ongoing",
                "paused",
                "archived",
                "upcoming"
            ]
        },
        "posts": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "url"
                    }
                },
                "required": [
                    "id"
                ]
            }
        },
        "content": {
            "type": "object",
            "description": "A map of media-type to URLs where the content can be found in that particular format",
            "example": {
              "text/html": "https://example.com/hello/world",
              "text/markdown": "https://example.com/hello/world.md"
            },
            "additionalProperties": {
              "type": "string",
              "format": "url"
            }
          }
    },
    "required": [
        "id",
        "metadata",
        "status",
        "posts",
        "content"
    ]
}